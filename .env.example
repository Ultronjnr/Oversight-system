# Oversight Procurement Management System - Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=

# Database Configuration (for backend)
DATABASE_URL=postgresql://username:password@localhost:5432/oversight_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=oversight_db
DATABASE_USER=oversight_user
DATABASE_PASSWORD=your_secure_password

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png
UPLOAD_STORAGE_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=oversight@company.com

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Application Settings
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# Company Information
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+1234567890
COMPANY_EMAIL=info@company.com

# Deployment Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true
